<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="photo_preview_action" model="ir.actions.client">
            <field name="name">oks.photos.preview</field>
            <field name="tag">oks_photos_preview</field>
        </record>

        <record id="photos_form_view" model="ir.ui.view">
            <field name="name">photos.form.view</field>
            <field name="model">oks.intranet.photos</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <div class="oks_item_per_row" id="oks_container">
                            <div class="oks_item_per_row oks_form_doc_header">
                                <group>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="description"/>
                                </group>
                            </div>
                            <widget name="oks_intranet_img_prev"/>
                            <div class="oks_item_per_row">
                                <group>
                                    <field name="thumbnail" groups="oks_intranet.intranet_manager"/>
                                    <field name="documents" widget="many2many_binary" string="Fotos"/>
                                </group>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="photos_kanban_view" model="ir.ui.view">
            <field name="name">photos.kanban.view</field>
            <field name="model">oks.intranet.photos</field>
            <field name="arch" type="xml">
               <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="thumbnail"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oks_kanban_post oks_item_per_row">
                                <span class="oks_kanban_title">
                                    <field name="name"/>
                                </span>
                                <div class="oks_kanban_info oks_item_per_row">
                                    <span>Fecha: 
                                        <field name="date"/>
                                    </span>
                                    <field name="description"/>
                                </div>
                                <t t-if="record.thumbnail.raw_value">
                                    <img t-att-src="kanban_image('oks.intranet.photos', 'thumbnail', record.id.raw_value)" class="oks_intranet_kanban_img"/>
                                </t>
                            </div>             
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>