<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="post_action" model="ir.actions.act_window">
            <field name="name">Noticias</field>
            <field name="res_model">oks.intranet.post</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crea el primer post</p>
            </field>
        </record>

        <record id="cat_action" model="ir.actions.act_window">
            <field name="name">Categorias</field>
            <field name="res_model">oks.intranet.post.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Intranet"
            id="intranet_root_menu"
            parent=""
            groups="intranet_user"
            sequence="0"
        />

        <menuitem id="post_menu_root"
            name="Noticias"
            parent="intranet_root_menu"
            sequence="2"
            groups="intranet_user"
        />

        <menuitem id="post_menu"
            name="Noticias"
            parent="post_menu_root"
            action="post_action"
            sequence="4"
            groups="intranet_user"
        />

        <menuitem id="post_cat_menu"
            name="Categorias"
            parent="post_menu_root"
            action="cat_action"
            sequence="4"
            groups="intranet_manager"
        />

        <menuitem id="photo_kanban_menu"
            name="Fotos"
            parent="intranet_root_menu"
            action=""
            sequence="4"
            groups="intranet_user"
        />

        <menuitem id="doc_kanban_menu"
            name="Documentos"
            parent="intranet_root_menu"
            action=""
            sequence="4"
            groups="intranet_user"
        />

        <menuitem id="manual_kanban_menu"
            name="Manuales"
            parent="intranet_root_menu"
            action=""
            sequence="4"
            groups="intranet_user"
        />
    </data>
</odoo>