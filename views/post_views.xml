<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="post_form_view" model="ir.ui.view">
            <field name="name">post.form.view</field>
            <field name="model">oks.intranet.post</field>
            <field name="arch" type="xml">
                <form string="Nuevo post">
                    <sheet>
                        <div class="oks_item-per-row">
                            <div class="oks_form_header">
                                <field name="name"/>
                            </div>
                            <div class="oks_item-per-row oks_form_body">
                                <field name="category"/>
                                <field name="date"/>
                                <span groups="oks_intranet.intranet_manager">Descripci√≥n: 
                                    <field name="description"/>
                                </span>
                                <span groups="oks_intranet.intranet_manager">Imagen: 
                                    <field name="image" widget="image"/>
                                </span>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="post_kanban_view" model="ir.ui.view">
            <field name="name">post.kanban.view</field>
            <field name="model">oks.intranet.post</field>
            <field name="arch" type="xml">
               <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oks_kanban_post oks_item-per-row">
                                <span class="oks_kanban_title">
                                    <field name="name"/>
                                </span>
                                <div class="oks_kanban_info oks_item-per-row">
                                    <span>Categoria: 
                                        <field name="category"/>
                                    </span>
                                    <span>Fecha: 
                                        <field name="date"/>
                                    </span>
                                    <field name="description"/>
                                </div>
                            </div>             
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>