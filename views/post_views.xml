<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="post_form_view" model="ir.ui.view">
            <field name="name">post.form.view</field>
            <field name="model">oks.intranet.post</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oks_item_per_row">
                            <div class="oks_form_post_header">
                                <field name="name"/>
                            </div>
                            <div class="oks_item_per_row oks_form_body">
                                <span groups="oks_intranet.intranet_manager">Categoria:</span>
                                <field name="category"/>
                                <field name="date"/>
                                <span groups="oks_intranet.intranet_manager">Descripci√≥n:</span>
                                <field name="description"/>
                                <span groups="oks_intranet.intranet_manager">Imagen:</span>
                                <div class="oks_center_img">
                                    <field name="image" widget="image"/>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="post_kanban_view" model="ir.ui.view">
            <field name="name">post.kanban.view</field>
            <field name="model">oks.intranet.post</field>
             <field name="priority" eval="1"/>
            <field name="arch" type="xml">
               <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oks_kanban_post oks_item_per_row">
                                <span class="oks_kanban_title">
                                    <field name="name"/>
                                </span>
                                <div class="oks_kanban_info oks_item_per_row">
                                    <span>Categoria: 
                                        <field name="category"/>
                                    </span>
                                    <span>Fecha: 
                                        <field name="date"/>
                                    </span>
                                    <field name="description"/>
                                </div>
                            </div>             
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="post_tree_view" model="ir.ui.view">
            <field name="name">post.tree.view</field>
            <field name="model">oks.intranet.post</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="description"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>